                         [out, annotation("_Outptr_result_maybenull_")] LPWSTR* ppszOptionalStatusText,
                         [out, annotation("_Out_")] CREDENTIAL_PROVIDER_STATUS_ICON* pcpsiOptionalStatusIcon);
};

